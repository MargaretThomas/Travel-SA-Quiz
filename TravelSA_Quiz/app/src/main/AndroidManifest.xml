<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.margaret.travelsa_quiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.margaret.travelsa_quiz.ProvinceSelection"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.margaret.travelsa_quiz.Questions"
            android:label="@string/title_activity_questions"
            android:parentActivityName="com.example.margaret.travelsa_quiz.ProvinceSelection"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.margaret.travelsa_quiz.ProvinceSelection" />
        </activity>
        <activity
            android:name="com.example.margaret.travelsa_quiz.Travelling"
            android:label="@string/title_activity_travelling"
            android:parentActivityName="com.example.margaret.travelsa_quiz.ProvinceSelection"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.margaret.travelsa_quiz.ProvinceSelection" />
        </activity>
        <activity
            android:name="com.example.margaret.travelsa_quiz.Help"
            android:label="@string/title_activity_help"
            android:parentActivityName="com.example.margaret.travelsa_quiz.ProvinceSelection"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.margaret.travelsa_quiz.ProvinceSelection" />
        </activity>
    </application>

</manifest>
